---
// 组件脚本 (JavaScript)
// 全局layout
// @author: zhaoyahui
// @since: 2023-04-13
import Header from "./Header.astro";
const { options } = Astro.props;
---

<!-- 组件模板 (HTML + JS 表达式) -->
<html lang="zn">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{options.title}</title>
  </head>
  <style>
    html,
    body {
      width: 100%;
      height: 100%;
      margin: 0;
      background: #667e71;
      color: #efead7;
    }
  </style>
  <body>
    <Header />
    <!-- 2. 渲染的 HTML 将被传入默认插槽。 -->
    <slot />
  </body>
  <script>
    // 打印版权信息
    console.log(
      "\n %c 小辉导航 By 小辉不会飞 %c 技术网站收藏夹 \n",
      "color: #ffffff; background: #f1404b; padding:5px 0; border-radius:8px 0 0 8px;",
      "color: #ffffff; background: #030307; padding:5px 0; border-radius:0 8px 8px 0;"
    );
  </script>
</html>
